    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/ImageEditor.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "project-files/source_images/one-does-not-simply.ppm", 
                "project-files/my_images/one-does-not-simply.ppm", 
                "emboss"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json"
        }
    ]
}